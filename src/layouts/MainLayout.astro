---
import BaseHead from "@/components/BaseHead.astro";
import Navbar from "@/components/Navbar.astro";
import Footer from "@/components/Footer.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;

---

<!doctype html>
<html lang="es">
	<BaseHead title={title} />
	<body data-theme="night">
		<Navbar />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>